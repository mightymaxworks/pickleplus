# PKL-278651-CONFIG-0003-PROD
# Environment Variables Example
# Copy this file to .env and fill in the values for your environment
# @framework Framework5.3
# @version 1.0.0
# @lastModified 2025-04-22

# Node Environment
# Set to 'development', 'test', or 'production'
NODE_ENV=development

# Server Settings
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
PGHOST=hostname
PGUSER=username
PGPASSWORD=password
PGDATABASE=database_name
PGPORT=5432

# Authentication
SESSION_SECRET=your-very-secure-session-secret-key-change-this-in-production

# Logging
LOG_LEVEL=info

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_TOURNAMENTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_COACHING=true

# External Services
# Add any external service API keys here
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=SG...

# Security
# Set to true to require HTTPS for cookies
SECURE_COOKIES=false